datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
  output   = "./erd.png"
}

model Professor {
  id        String  @id @default(uuid())
  nome      String
  matricula String? @unique

  turmas     Turma[]
  faceVector FaceVector[]
  reservas   ReservaRecurso[]
}

model Curso {
  id          Int          @id @default(autoincrement())
  nome        String
  codCurso    String       @unique
  disciplinas Disciplina[]
}

model Disciplina {
  id      Int     @id @default(autoincrement())
  nome    String
  codCred String  @unique
  cursoId Int
  curso   Curso   @relation(fields: [cursoId], references: [id])
  turmas  Turma[]
}

model Turma {
  id           Int      @id @default(autoincrement())
  numero       Int      @unique
  horario      String
  dataInicial  DateTime
  dataFinal    DateTime
  professorId  String
  disciplinaId Int

  professor  Professor  @relation(fields: [professorId], references: [id])
  disciplina Disciplina @relation(fields: [disciplinaId], references: [id])
}

model Recurso {
  id        String           @id @default(uuid())
  descricao String
  reservado Boolean          @default(false) // Indica se está reservado ou não
  sala      Sala?
  reservas  ReservaRecurso[]
}

model Sala {
  id         String  @id
  numeroSala String
  estado     Boolean @default(false)

  recurso Recurso @relation(fields: [id], references: [id])
}

model ReservaRecurso {
  id          String        @id @default(uuid())
  professorId String
  recursoId   String
  turmaId     Int
  periodo     PeriodoLetivo
  data        DateTime

  professor Professor @relation(fields: [professorId], references: [id])
  recurso   Recurso   @relation(fields: [recursoId], references: [id])

  @@unique([professorId, recursoId, data, periodo])
}

model FaceVector {
  id          String    @id @default(uuid())
  value       Float
  index       Int
  professorId String
  professor   Professor @relation(fields: [professorId], references: [id])

  @@unique([professorId, index])
}

enum PeriodoLetivo {
  AB // 08:00–09:30
  CD // 09:45–11:15
  EE1 // 11:30–13:00
  FG // 14:00–15:30
  HI // 15:45–17:15
  JK // 17:30–19:00
  LM // 19:15–20:45
  NP // 21:00–22:30
}
